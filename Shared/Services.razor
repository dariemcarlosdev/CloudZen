@using CloudZen.Models
@using CloudZen.Services
@inject PersonalService PersonalService

<section id="services" class="py-24 bg-gray-50 text-center">
    <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">My Services</h2>
    <h3 class="text-xl font-semibold mb-4">Strategic Solutions. Tangible Results.</h3>
    <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        I help you modernize outdated systems, simplify operations, and scale with confidence—without the tech overwhelm. Every solution is built around your goals, delivered with clarity, and designed to drive results.
    </p>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        @foreach (var service in _services)
        {
            <div class="p-6 bg-white rounded-xl shadow hover:shadow-lg transition-transform duration-300 hover:-translate-y-2">
                <div class="text-4xl mb-4">@service.Icon</div>
                <h3 class="text-xl font-semibold mb-2">@service.Title</h3>
                <p class="text-gray-600">@service.Description</p>
            </div>
        }
    </div>
</section>

@code {
    private List<ServiceInfo> _services = new();

    protected override void OnInitialized()
    {
        _services = PersonalService.GetAllServices();
    }
}
