        <button @onclick="HandleResumeDownload" 
                class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white font-medium rounded-xl shadow hover:bg-indigo-700 transition">
            <i class="bi bi-download"></i>
            <span>Download My Resume</span>
        </button>
    </div>
</div>

@code {
    /// <summary>
    /// Event callback triggered when the download resume button is clicked.
    /// Envet callback is specially used to allow parent component to handle the event. In this case, parent component will handle the actual download logic.
    /// Parent component should handle the actual download logic.
    /// </summary>
    [Parameter]
    public EventCallback OnResumeDownload { get; set; }

    private async Task HandleResumeDownload()
    {
        await OnResumeDownload.InvokeAsync();
    }
}
