@page "/"
@using CloudZen.Shared
@inject IJSRuntime JS

<div class="min-h-screen flex flex-col bg-gray-50">
    <main class="flex-1 flex flex-col gap-12 md:gap-20 items-center w-full px-4 sm:px-6">
        <div class="w-full max-w-7xl">
            <Hero />
            <Mission />
            <ValueProposition />
            <Services /> 
            <CaseStudies />
            <!-- <Testimonials /> -->
            <!-- Commented out: Testimonials section is temporarily disabled, possibly for redesign, content update, or to focus user attention on other sections. -->
            <CTA />
            <ContactForm />
        </div>
    </main>
    <Footer />
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("scrollToHero");
        }
    }
}
